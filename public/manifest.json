{
  "manifest_version": 3,
  "name": "Pomodoro",
  "version": "1.0.0",
  "permissions": ["alarms", "notifications", "storage"],
  "action": {
    "default_title": "Pomodoro",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "/icon-16.png",
    "32": "/icon-32.png",
    "48": "/icon-48.png",
    "128": "/icon-128.png"
  }
}
